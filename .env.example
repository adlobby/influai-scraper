# --- Backend (HTTP ingest target) ---
# If running locally: http://127.0.0.1:8000
# If deployed: https://api.your-domain.com
BACKEND_URL=http://127.0.0.1:8000
INGEST_MODE=http         # http | mongo

# --- Mongo (only used if INGEST_MODE=mongo) ---
MONGO_URI=mongodb+srv://<USER>:<PASSWORD>@<CLUSTER_HOST>/?retryWrites=true&w=majority
MONGO_DB=influAI
MONGO_COL=scraped_data

# --- Google Programmable Search (CSE) ---
GOOGLE_API_KEY=YOUR_GOOGLE_API_KEY
GOOGLE_CSE_ID=YOUR_CSE_ID

# --- Keywords & limits ---
SCRAPE_KEYWORDS=ai marketing, creator economy, social media trends, gen ai tools, seo ai, content marketing, digital marketing, branding strategies, influencer marketing, growth hacking, startup ideas, viral marketing, AI tools for marketing, machine learning marketing, TikTok trends, YouTube algorithm, Instagram growth, automation tools, AI content creation, marketing automation, product launches, online business trends, e-commerce marketing
MAX_RESULTS_PER_QUERY=8
MAX_QUERIES_PER_HOUR=12
DELAY_BETWEEN_REQUESTS=1.0
MIN_CONTENT_LEN=150
HTTP_TIMEOUT_SEC=20
DOMAIN_BLOCKLIST=business.adobe.com,sciencedirect.com,tandfonline.com,statista.com,collabstr.com,make.com

# --- Feature toggles ---
ENABLE_TRENDS=true
ENABLE_NEWSAPI=true
ENABLE_REDDIT_API=true
ENABLE_YOUTUBE=true

# Run strategy for heavy sources: rotate | all
RUN_STRATEGY=rotate
MAX_TOTAL_DOCS=500
REDDIT_PER_SUB=8

# --- Google Trends ---
TRENDS_PER_SEED=3

# --- YouTube (Data API v3 + transcripts) ---
YOUTUBE_API_KEY=YOUR_YOUTUBE_API_KEY
YOUTUBE_MAX_RESULTS=5
YOUTUBE_LANGS=en,en-US

# --- NewsAPI ---
NEWSAPI_KEY=YOUR_NEWSAPI_KEY

# --- Reddit API (script app) ---
REDDIT_CLIENT_ID=YOUR_REDDIT_CLIENT_ID
REDDIT_CLIENT_SECRET=YOUR_REDDIT_CLIENT_SECRET
REDDIT_USER_AGENT=python:yourapp:v1.0 (by /u/your_username)
REDDIT_SUBS=marketing,Entrepreneur,Artificial,YouTubers,content_marketing,socialmedia,startups,digital_marketing,SideProject,SmallBusiness,branding,SEO,growthhacking,InternetIsBeautiful,technology,MachineLearning,DataScience,AI,FutureWhatIf,CreatorEconomy,Productivity

# --- Per-source fulltext control ---
FETCH_FULLTEXT_NEWSAPI=false
FETCH_FULLTEXT_REDDIT=true

# --- Reliability (queue on failure) ---
OUTBOX_PATH=data/outbox.jsonl

# --- Monitoring (optional) ---
ALERT_WEBHOOK=YOUR_DISCORD_OR_SLACK_WEBHOOK_URL

# --- Playwright (not wired yet) ---
ENABLE_PLAYWRIGHT=false
PLAYWRIGHT_MAX_PAGES=3
